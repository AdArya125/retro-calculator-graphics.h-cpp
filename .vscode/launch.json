{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Retro Calculator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/calcy.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "externalTerminal",   // Required for graphics window
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe",   // Change this if your GDB is elsewhere
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
